{
  "manifest_version": 2,
  "name": "PepperTab",
  "short_name": "PepperTab",
  "version": "1.4.0",
  "chrome_url_overrides": {
    "newtab": "./index.html"
  },
  "content_security_policy": "script-src 'self' https://apis.google.com/; object-src 'self'",
  "permissions": [
    "geolocation",
    "webRequest",
    "webRequestBlocking",
    "*://peppertab.com/*",
    "topSites"
  ],
  "optional_permissions": ["identity", "*://content.googleapis.com/*"],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "index.html"
  ],
  "icons": {
    "16": "assets/logo-16px.png",
    "48": "assets/logo-48px.png",
    "128": "assets/logo-128px.png"
  }
}
